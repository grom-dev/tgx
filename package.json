{
  "name": "@grom.js/tgx",
  "type": "module",
  "version": "1.1.0",
  "packageManager": "pnpm@10.22.0",
  "description": "JSX runtime for composing Telegram messages",
  "author": {
    "name": "Vladislav Deryabkin",
    "url": "https://evermake.me"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/grom-dev/tgx.git"
  },
  "keywords": [
    "jsx",
    "telegram"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./jsx-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js"
    },
    "./jsx-dev-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js"
    }
  },
  "files": [
    "./dist/",
    "./src/"
  ],
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "rm -rf ./dist/ && tsc --project ./tsconfig.lib.json",
    "typecheck": "tsc --build --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest --config ./vitest.config.ts",
    "test:coverage": "vitest run --config ./vitest.config.ts --coverage",
    "deps": "taze --interactive --write --include-locked",
    "release": "bumpp"
  },
  "devDependencies": {
    "@antfu/eslint-config": "7.4.3",
    "@types/node": "22.19.11",
    "@vitest/coverage-v8": "4.0.18",
    "bumpp": "10.4.1",
    "eslint": "9.39.2",
    "eslint-plugin-format": "1.4.0",
    "taze": "19.9.2",
    "vitest": "4.0.18"
  }
}
